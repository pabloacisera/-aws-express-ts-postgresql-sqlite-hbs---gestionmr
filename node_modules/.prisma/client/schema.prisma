generator client {
  // configuración no recomendable
  //provider = "prisma-client"
  //output   = "../src/generated/prisma"
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================
// MODELOS DE LA APLICACIÓN
// =========================================================

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones 1 a 1
  config          UserConfig?
  controlRegister ControlRegister[]
}

model UserConfig {
  id String @id @default(uuid())

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  pdfGenerate       Boolean @default(true)
  showAllRegistries Boolean @default(false)
  cacheRegistries   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ControlRegister {
  id Int @id @default(autoincrement())

  // Relación 1 a 1 con User. @unique asegura que cada usuario tenga solo 1 registro de control asociado.
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  agente               String
  fecha                DateTime? // Se asume que podría ser nulo
  lugar                String
  conductor_nombre     String
  licencia_tipo        String
  licencia_numero      String
  licencia_vencimiento DateTime?
  empresa_select       String
  dominio              String
  interno              String?
  c_matriculacion_venc DateTime?
  c_matriculacion_cert String?
  seguro_venc          DateTime?
  seguro_cert          String?
  rto_venc             DateTime?
  rto_cert             String?
  tacografo_venc       DateTime?
  tacografo_cert       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  certificates CertificateDocument[]
}

model CertificateDocument {
  id Int @id @default(autoincrement())

  // relacion con el controlRegister
  controlId Int
  control   ControlRegister @relation(fields: [controlId], references: [id], onDelete: Cascade)

  // tipo: para saber cual _cert pertenece - relacion la enumeracion
  certificateType CertificateType

  certificateNumber String
  publicId          String? @db.VarChar(255)
  fileName          String
  filePath          String
  fileSize          Int
  mimeType          String

  // metadata opcional
  description String?
  uploadedAt  DateTime @default(now())

  // sin duplicados
  @@unique([controlId, certificateType])
  // indices compuestos
  @@index([controlId, certificateType])
  @@index([controlId, certificateNumber])
}

enum CertificateType {
  C_MATRICULACION
  SEGURO
  RTO
  TACOGRAFO
}
