{{! views/activation_success.hbs }}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-success text-white">
                    <h3>✅ Activación Exitosa</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="green"
                            class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path
                                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </div>

                    <h4 class="mb-3">¡Bienvenido, {{name}}!</h4>
                    <p class="lead">{{message}}</p>

                    <div class="alert alert-success mt-3">
                        <p class="mb-0">Tu cuenta ha sido activada exitosamente. Ya puedes iniciar sesión y disfrutar de
                            todas las funcionalidades.</p>
                    </div>

                    <div class="mt-4">
                        <a href="/" class="btn btn-success btn-lg">Ir al Inicio</a>
                        <a href="/login-user" class="btn btn-outline-primary btn-lg ms-2">Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>