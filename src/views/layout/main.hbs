<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>

    <!-- SIDEBAR: Offcanvas en móvil, fijo en desktop -->
    <aside class="sidebar" id="sidebarMenu">
        <div class="sidebar-header">
            <h5 class="sidebar-title">Gestion MR</h5>
            <button type="button" class="btn-close-custom" data-bs-dismiss="offcanvas" aria-label="Cerrar">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="sidebar-body">
            <nav class="nav flex-column">
                <a class="nav-link {{#if (eq currentPath '/')}}active{{/if}}" href="/">
                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </a>
                <a class="nav-link {{#if (eq currentPath '/registers')}}active{{/if}}" href="/registers">
                    <i class="fas fa-list"></i>
                    <span>registros</span>
                </a>

                <a class="nav-link {{#if (eq currentPath '/stadistics')}}active{{/if}}" href="/stats">
                    <i class="fas fa-chart-line"></i>
                    <span>Estadísticas</span>
                </a>
                <a class="nav-link {{#if (eq currentPath '/configuration')}}active{{/if}}" href="/config">
                    <i class="fas fa-cogs"></i>
                    <span>Configuración</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a class="btn btn-logout" href="/api/logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Salir</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- HEADER: Fijo arriba en móvil y desktop -->
    <header class="header">
        <button class="btn-menu" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu"
            aria-controls="sidebarMenu">
            <i class="fas fa-bars"></i>
        </button>

        <!-- BUSCADOR SIMPLE Y FUNCIONAL -->
        <div class="header-search">
            <div class="input-group">
                <select class="form-select search-category" style="max-width: 150px; border-radius: 6px 0 0 6px;">
                    <option value="all" selected>Todos</option>
                    <option value="conductor_nombre">Conductor</option>
                    <option value="empresa_select">Empresa</option>
                    <option value="interno">Interno</option>
                    <option value="dominio">Dominio</option>
                    <option value="agente">Agente</option>
                </select>

                <input type="text" class="form-control search-input" placeholder="Buscar registros..."
                    aria-label="Buscar">

                <button class="btn btn-primary btn-search-action" type="button">
                    <i class="fas fa-search"></i>
                    <span class="d-none d-md-inline">Buscar</span>
                </button>
            </div>
        </div>

        <div class="header-actions">
            {{#if isAuthenticated}}
            {{#if user}}
            <a href="#" class="header-link header-user" title="Perfil">
                <i class="fas fa-user"></i>
                <span class="d-none d-md-inline"><a href="/profile">{{user.name}}</a></span>
            </a>
            {{/if}}
            {{else}}
            <a href="/login-user" class="header-link" title="Iniciar sesión">
                <i class="fas fa-sign-in-alt"></i>
                <span class="d-none d-md-inline">Iniciar sesión</span>
            </a>
            <a href="/register-user" class="header-link" title="Registrarse">
                <i class="fas fa-user-plus"></i>
                <span class="d-none d-md-inline">Registrarse</span>
            </a>
            {{/if}}
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        {{{ body }}}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/786e460efc.js" crossorigin="anonymous"></script>

    <script type="module" src="/js/main.js"></script>

</body>

</html>