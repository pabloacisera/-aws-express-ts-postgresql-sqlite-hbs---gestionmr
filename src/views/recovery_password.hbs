                        <p class="text-muted mb-0">
                            <i class="fas fa-arrow-left me-1"></i>
                            <a href="/login-user" class="text-decoration-none">
                                Volver al inicio de sesión
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

