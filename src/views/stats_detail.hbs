{{! views/stats_detail.hbs }}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="fas fa-list-alt me-2"></i>{{title}}
                    </h2>
                    <p class="text-muted mb-0">Detalle completo de los registros</p>
                </div>
                <a href="/stats" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Estadísticas
                </a>
            </div>
        </div>
    </div>

    {{#if (eq tipo 'vencimiento')}}
    <!-- Vista para detalle de vencimientos -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>
                        {{detalle.titulo}} - Total: {{detalle.total}} registros
                    </h5>
                </div>
                <div class="card-body">
                    {{#if detalle.total}}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Interno</th>
                                    <th>Dominio</th>
                                    <th>Empresa</th>
                                    <th>Conductor</th>
                                    <th>Documento Conductor</th>
                                    <th>Vencimiento</th>
                                    {{#if (eq detalle.estado 'proximos')}}
                                    <th>Días Restantes</th>
                                    {{/if}}
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each detalle.registros}}
                                <tr class="{{#unless this.tieneDocumento}}table-warning{{/unless}}">
                                    <td>{{this.interno}}</td>
                                    <td>{{this.dominio}}</td>
                                    <td>{{this.empresa}}</td>
                                    <td>{{this.conductor}}</td>
                                    <td>{{this.documentoConductor}}</td>
                                    <td>
                                        <span class="badge bg-{{#if (eq @root.detalle.estado 'vencidos')}}danger{{else}}warning{{/if}}">
                                            {{this.vencimientoFormateado}}
                                        </span>
                                        {{#unless this.tieneDocumento}}
                                        <span class="badge bg-secondary ms-1" title="Sin documento subido">
                                            <i class="fas fa-file-exclamation"></i>
                                        </span>
                                        {{/unless}}
                                    </td>
                                    {{#if (eq @root.detalle.estado 'proximos')}}
                                    <td>
                                        <span class="badge bg-{{#if this.necesitaRenovacion}}danger{{else}}info{{/if}}">
                                            {{this.diasRestantes}} días
                                        </span>
                                    </td>
                                    {{/if}}
                                    <td>
                                        <!-- Botón diferente según tenga documento -->
                                        {{#if this.tieneDocumento}}
                                            <button type="button" 
                                                   class="btn btn-sm btn-{{#if this.necesitaRenovacion}}danger{{else}}warning{{/if}} disabled" 
                                                   title="{{#if this.necesitaRenovacion}}¡Necesita renovación!{{else}}Renovar documento{{/if}}"
                                                   data-action="upload-disabled">
                                                <i class="fas fa-sync-alt me-1"></i>
                                                {{#if this.necesitaRenovacion}}¡Renovar!{{else}}Renovar{{/if}}
                                            </button>
                                        {{else}}
                                            <button type="button" 
                                                   class="btn btn-sm btn-success disabled" 
                                                   title="Subir documento por primera vez"
                                                   data-action="upload-disabled">
                                                <i class="fas fa-file-upload me-1"></i>Subir
                                            </button>
                                        {{/if}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No hay registros en esta categoría.
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    {{#if (eq tipo 'documento')}}
    <!-- Vista para detalle de documentos -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>
                        {{detalle.titulo}} - Total: {{detalle.total}} documentos
                    </h5>
                </div>
                <div class="card-body">
                    {{#if detalle.total}}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Archivo</th>
                                    <th>Interno</th>
                                    <th>Dominio</th>
                                    <th>Empresa</th>
                                    <th>Conductor</th>
                                    <th>Tamaño</th>
                                    <th>Fecha Subida</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each detalle.documentos}}
                                <tr>
                                    <td>
                                        <i class="fas fa-file-pdf text-danger me-2"></i>
                                        {{this.nombreArchivo}}
                                    </td>
                                    <td>{{this.interno}}</td>
                                    <td>{{this.dominio}}</td>
                                    <td>{{this.empresa}}</td>
                                    <td>{{this.conductor}}</td>
                                    <td>{{this.tamaño}}</td>
                                    <td>{{this.fechaSubidaFormateada}}</td>
                                    <td>
                                        <a href="/api/cert/{{this.id}}/download" class="btn btn-sm btn-outline-primary" title="Descargar">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        <a href="/api/cert/{{this.id}}/preview" target="_blank" class="btn btn-sm btn-outline-info" title="Previsualizar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-success disabled" title="Cargar más documentos" data-action="upload-disabled">
                                            <i class="fas fa-file-upload"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No hay documentos en esta categoría.
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    {{#if (eq tipo 'empresa')}}
    <!-- Vista para detalle por empresa -->
    <div class="row">
        {{#each detalle.empresas}}
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-building me-2"></i>
                        {{this.nombre}} 
                        <span class="badge bg-light text-dark ms-2">{{this.cantidad}} registros</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Interno</th>
                                    <th>Dominio</th>
                                    <th>Conductor</th>
                                    <th>Fecha</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each this.registros}}
                                <tr>
                                    <td>{{this.interno}}</td>
                                    <td>{{this.dominio}}</td>
                                    <td>{{this.conductor}}</td>
                                    <td>{{this.fecha}}</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-success disabled" title="Cargar documentos" data-action="upload-disabled">
                                            <i class="fas fa-file-upload"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if (eq tipo 'lugar')}}
    <!-- Vista para detalle por lugar -->
    <div class="row">
        {{#each detalle.lugares}}
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        {{this.nombre}} 
                        <span class="badge bg-light text-dark ms-2">{{this.cantidad}} registros</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Interno</th>
                                    <th>Dominio</th>
                                    <th>Empresa</th>
                                    <th>Fecha</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each this.registros}}
                                <tr>
                                    <td>{{this.interno}}</td>
                                    <td>{{this.dominio}}</td>
                                    <td>{{this.empresa}}</td>
                                    <td>{{this.fecha}}</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-success disabled" title="Cargar documentos" data-action="upload-disabled">
                                            <i class="fas fa-file-upload"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<style>
    /* Estilo para botones deshabilitados */
    button.disabled[data-action="upload-disabled"] {
        opacity: 0.6;
        pointer-events: auto; /* Permitir clics para la alerta */
    }
    
    button.disabled[data-action="upload-disabled"]:hover {
        opacity: 0.7;
        cursor: not-allowed;
    }
    
    /* Evitar que otros elementos sean clickeables */
    .disabled {
        pointer-events: none;
    }
</style>

<script>
// Script para deshabilitar botones de carga y mostrar alerta
document.addEventListener('DOMContentLoaded', function() {
    // Seleccionar todos los botones con el atributo data-action="upload-disabled"
    const uploadButtons = document.querySelectorAll('button[data-action="upload-disabled"]');
    
    uploadButtons.forEach(button => {
        // Asegurar que esté deshabilitado visualmente
        button.classList.add('disabled');
        button.setAttribute('disabled', 'disabled');
        
        // Cambiar el cursor para indicar que no es clickeable
        button.style.cursor = 'not-allowed';
        
        // Agregar evento de clic para mostrar alerta
        button.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            // Mostrar alerta personalizada
            alert('⚠️ Servicio no disponible temporalmente\n\nLa funcionalidad de carga de documentos está en mantenimiento. Por favor, intente nuevamente más tarde.');
        });
    });
    
    // También capturar clics en enlaces que podrían ser para carga
    const uploadLinks = document.querySelectorAll('a[href*="/doc-register/"]');
    uploadLinks.forEach(link => {
        // Solo si no es un botón ya manejado
        if (!link.classList.contains('btn')) {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                alert('⚠️ Servicio no disponible temporalmente\n\nLa funcionalidad de carga de documentos está en mantenimiento. Por favor, intente nuevamente más tarde.');
            });
        }
    });
});
</script>